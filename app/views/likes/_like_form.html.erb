<% if post.liked_by?(current_user) %>
    <%= link_to "Unlike", { :controller => "likes", :action => "destroy", :post_id => post.id }, method: "delete", class: "btn btn-danger btn-xs" %>
<% else %>
    <%= link_to "Like", { :controller => "likes", :action => "create", :post_id => post.id }, method: "post", class: "btn btn-primary btn-xs" %>
<% end %>